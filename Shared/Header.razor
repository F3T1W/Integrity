                <AuthorizeView Roles="Admin, User">
                    <Authorized>
                        <a class="btn btn-primary shadow" role="button" href="/Logout">Sign Out</a>
                    </Authorized>
                    <NotAuthorized>
                        <a class="btn btn-primary shadow" role="button" href="/Login">Sign In</a>
