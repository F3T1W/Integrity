        </a><button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse text-center" id="navcol-1">
            <ul class="navbar-nav mx-auto header-ul">
                <li class="nav-item"><a class="nav-link @(currentUri!.EndsWith("/") ? "active" : "")" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link @(currentUri.EndsWith("/Projects") ? "active" : "")" href="/Projects">Projects</a></li>
